  padding: 50px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  z-index: 1;
}

/* Popup content styles */
.popup-content {
  text-align: center;
}

/* Close button styles */
.closed {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 40px;
  cursor: pointer;
  color: #da1010;
}

/* Button styles */
.popup-content button {
  background-color: #862f7c;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  margin: 10px;
  cursor: pointer;
  font-size: 16px;
}

/* Button hover effect */
.popup-content button:hover {
opacity: 0.9;
}
input[type=text], input[type=password] {
